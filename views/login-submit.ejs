<% if (isLoggedIn) { %>
    <%- include("templates/header") %>
<% } else { %>
    <%- include("templates/header-beforeLogin") %>
<% } %>
<div class="form-wrapper signin">
    <main class="form-signin w-100 m-auto">
        <h2 class="form-signin-heading">
            <%= errorMessage?.replace('\n', '<br>') %>
        </h2>
        <button class="btn btn-lg btn-primary btn-block" type="submit" onclick="location.href='/login'">
            Try Again
        </button>
    </main>
</div>
<%- include("templates/footer") %>
