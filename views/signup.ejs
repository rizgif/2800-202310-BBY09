<% if (isLoggedIn) { %>
    <%- include("templates/header") %>
<% } else { %>
    <%- include("templates/header-beforeLogin") %>
<% } %>
<main class="form-wrapper signin">
    <div class="form-signup w-100 m-auto">
        <form action='/signup-submit' method='post' class="needs-validation" novalidate>
            <h1 class="h3 fw-normal">Create user</h1>

            <div class="form-floating">
                <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" required>
                <label for="email">Email address <span>*</span></label>
                <div class="invalid-feedback">
                    Please enter an email address.
                </div>
            </div>

            <div class="form-floating">
                <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label for="password">Pasword <span>*</span></label>
                <div class="invalid-feedback">
                    Please choose a password.
                </div>
            </div>

<!--            <p class="form-indication">-->
<!--                Please enter a name.-->
<!--                <br/>You can always change this username later on your profile page.</p>-->
            <div class="form-floating">
                <input name="username" type="text" class="form-control" id="username" placeholder="Username" required>
                <label for="username">Name <span>*</span></label>
                <div class="invalid-feedback">
                    Please enter a name.
                </div>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
        </form>
    </div>
</main>
<%- include("templates/footer") %>