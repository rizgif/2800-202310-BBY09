<% if (isLoggedIn) { %>
    <%- include("templates/header-afterLogin") %>
  <% } else { %>
    <%- include("templates/header-beforeLogin") %>
  <% } %>
<main class="form-wrapper signin">
    <form action='/login-submit' method='post' class="needs-validation" novalidate>
        <h1 class="h3 fw-normal">Log in</h1>

        <div class="form-floating">
            <input name="email" type="email" class="form-control" id="email" placeholder="Email" required>
            <label for="email">Email</label>
            <div class="invalid-feedback">
                Please enter your email.
            </div>
        </div>
        <div class="form-floating">
            <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
            <label for="password">Password</label>
            <div class="invalid-feedback">
                Please enter your password.
            </div>
        </div>

        <div class="sign-btns-container">
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        </div>
    </form>

    <span class="hr"></span>
    <p class="link-signup">Don't have an account? <a href="/signup">Sign up</a></p>
    <p class="link-signup">Did you forget your password? <a href="/find-password">Find password</a></p>
</main>

<%- include("templates/footer") %>
